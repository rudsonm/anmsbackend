<md-card layout="column">
    <md-table-container>
        <table md-table>
            <thead md-head>
                <tr md-row>
                    <th md-column>Código</th>
                    <th md-column>Nome</th>
                    <th md-column>Categoria</th>
                    <th md-column>Preço</th>
                    <th md-column>Opções</th>
                </tr>
            </thead>
            <tbody md-body>
                <tr md-row data-ng-repeat="produto in produtoVm.produtos">
                    <td md-cell>{{produto.Codigo}}</td>
                    <td md-cell>{{produto.Nome}}</td>
                    <td md-cell>{{produto.Categoria.Nome}}</td>
                    <td md-cell>{{produto.Preco | currency: 'R$'}}</td>
                    <td md-cell layout-align="end center">
                        <md-icon class="blue" 
                                 data-ng-click="produtoVm.buscarProduto(produto.Id)" 
                                 data-ng-tooltip="Editar" 
                                 data-ng-direction="left">
                            edit
                        </md-icon>
                        <md-icon class="red" 
                                 data-ng-click="produtoVm.remover(produto)"
                                 data-ng-tooltip="Remover"
                                 data-ng-direction="right">
                            delete
                        </md-icon>
                    </td>
                </tr>
            </tbody>
        </table>
    </md-table-container>
</md-card>